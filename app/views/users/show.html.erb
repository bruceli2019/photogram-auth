<% Photo.all.where(user_id: @user_id).each do |photo| %>

    <div class="card" style="width: 80%; margin: 0 auto;">
      <div class="card-body">
        <h5 class="card-title"><%= User.find(photo.user_id).username %> <%= time_ago_in_words(photo.updated_at) %> </h5>
        <p><img src = "<%= photo.image %>" width = "100%" height = "auto"></p>
        
        <!--add captions-->
        <strong><%=photo.caption%></strong>
        
        <!--now need all the comments-->
        <% Comment.all.where(photo_id: photo.id).each do |comment| %>
            <!--commenter and comment date-->
            <p class="card-text">
                <%= User.find(comment.user_id).username %> <%= time_ago_in_words(comment.updated_at) %> ago
            </p>
            <p class = "card-text">
                <%= comment.body%>
            </p>
        <% end %>
            
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
    
<% end %>
